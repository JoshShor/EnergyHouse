<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity"
    android:background="@drawable/energyactivitybg">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/energyButton"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/energybutton"
        android:onClick="switchToEnergy"
        android:text="@string/energyButton" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"/>

    <Button
        android:id="@+id/recycleButton"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/recyclebutton"
        android:onClick="switchToRecycle"
        android:text="@string/recycleButton" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"/>

    <Button
        android:id="@+id/transportButton"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/transportbutton"
        android:onClick="switchToTransport"
        android:text="@string/transportButton" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>